@model WAG.ViewModels.Order.MakeOrderViewModel

@{
    ViewData["Title"] = "MakeOrder";
}

<header class="container text-center">
    <div class="row">
        <div class="col-sm-12 col-12>">
            <h2>Process your order</h2>
        </div>
    </div>
</header>

<main class="container text-center" id="make-order-main">
    <div class="row">
        <div class="col-sm-12 col-12">
            <form method="post" asp-area="" asp-controller="Order" asp-action="MakeOrder">
                <div class="form-group">
                    <input asp-for="ArtWorkId" type="hidden" class="form-control" value="@Model.ArtWorkId"/>
                </div>
                <div class="form-group">
                    <label asp-for="OrderInfo">Order info</label>
                    <p>Type here some additional info about your order if is needed</p>
                    <textarea asp-for="OrderInfo" class="form-control" placeholder="Order info..." id="make-order-info-field"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="TelephoneNumberForContact">Phone number</label>
                    <p>Type here Phone Number for contact with you, if it's different than phone number from your profile</p>
                    <input asp-for="TelephoneNumberForContact" type="tel" class="form-control" placeholder="Phone number..." id="make-order-phone-field"/>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryAddress">Delivery Address</label>
                    <p>Type here Delivery Address, if it's different than the Address from your profile</p>
                    <textarea asp-for="DeliveryAddress" class="form-control" placeholder="Delivery Address..." id="make-order-address-field"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Finish order</button>
                </div>
            </form>
        </div>
    </div>
</main>
