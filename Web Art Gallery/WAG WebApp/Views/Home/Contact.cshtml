@model WAG.ViewModels.Home.ContactMessageViewModel

@{
    ViewData["Title"] = "Contact";
    ViewData["Message"] = "Ema Ivanova";
}

<header class="container text-center">
    <div class="row">
        <div class="col-sm-12 col-12">
            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>
            <h4>Artist</h4>
        </div>
    </div>
</header>

<address class="container text-center" id="contact-address">
    <div class="row">
        <div class="col-sm-12">
            <i class="fas fa-phone"></i> Mobile: +359 889737579<br />
            <i class="fas fa-envelope"></i> E-mail: emaeivanova@gmail.com<br />
            <i class="fab fa-facebook-square"></i> <a href="http://www.facebook.com/EmaIvanovaArt/">www.facebook.com/EmaIvanovaArt/</a><br />
            <i class="fab fa-instagram"></i> <a href="https://www.instagram.com/ema.ivanova.art/">www.instagram.com/ema.ivanova.art/</a>
        </div>
    </div>
</address>

<article class="container" id="contact-article">
    <div class="row">
        <div class="col-sm-12 col-12 text-center">
            <div>
                <h3>Send Message</h3>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <form method="post" asp-area="" asp-controller="Home" asp-action="Contact">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title..." id="contact-message-title-field" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TextBody">Message</label>
                            <textarea asp-for="TextBody" class="form-control" placeholder="Write your message here..." id="contact-message-field"></textarea>
                            <span asp-validation-for="TextBody" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div>
                    <p>If you want to leave me a message here in website, please Login/Sign Up first.</p>
                    <p>Otherwise you can write me at email address above or feel free to call me by Phone.</p>
                </div>
            }
        </div>
    </div>
</article>