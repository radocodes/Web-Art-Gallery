@using Microsoft.AspNetCore.Identity
@using WAG.Data.Models
@inject SignInManager<WAGUser> SignInManager
@inject UserManager<WAGUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <ul class="nav navbar-nav">
            <li>
                <a asp-area="Administration" asp-action="IndexAdmin" asp-controller="AppManager">Administrator</a>
            </li>
        </ul>
    }

    <form asp-area="" asp-action="Logout" asp-controller="UserAccount" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li>
                <a asp-area="BG" asp-controller="Home" asp-action="IndexLogged"><i class="fas fa-globe-americas"></i> BG</a>
            </li>

            <!-- the following link is teporary disabled-->
            @*<li>
                    <a asp-area="" asp-controller="Order" asp-action="MyOrders"><i class="fas fa-shopping-cart"></i> My Orders</a>
                </li>*@
            <li>
                <a asp-area="" asp-controller="UserAccount" asp-action="MyProfile"><i class="fas fa-user"></i> My Profile</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fas fa-lock"></i> Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="BG" asp-action="Index" asp-controller="Home"><i class="fas fa-globe-americas"></i> BG</a></li>
        <li><a asp-action="Login" asp-controller="UserAccount"><i class="fas fa-key"></i> Login</a></li>
        <li><a asp-action="Register" asp-controller="UserAccount"><i class="fas fa-user-plus"></i> Sign Up</a></li>
    </ul>
}