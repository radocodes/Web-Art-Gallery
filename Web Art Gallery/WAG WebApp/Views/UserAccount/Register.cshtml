@model WAG.ViewModels.UserAccount.RegisterInputViewModel
@{
    ViewData["Title"] = "Register";
}

<header class="container text-center header-default" >
    <div class="row">
        <div class="col-12">
            <h2>Register</h2>
            @if (Model != null && Model.UnsuccessfulRegistrationMessage != null)
            {
                <h3 class="text-danger">@Model.UnsuccessfulRegistrationMessage</h3>
            }
        </div>
    </div>
</header>

<main class="container text-center main-default" >
    <div class="row">
        <div class="col-12">
            <form method="post" class="center-block">
                <hr style="height: 3px; background-color: black" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control field-default" placeholder="Username..." />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control field-default" placeholder="Email..." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control field-default" placeholder="Password..." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control field-default" placeholder="Repeat Password..." />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control field-default" placeholder="First Name..." />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control field-default" placeholder="Family Name..." />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input asp-for="City" class="form-control field-default" placeholder="City..." />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control field-default" placeholder="Address..." />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control field-default" placeholder="Phone..." />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Profile</button>
                </div>
            </form>
        </div>
    </div>
</main>
