@model WAG.ViewModels.UserAccount.LoginInputViewModel
@{
    ViewData["Title"] = "Login";
}

<header class="container header-default">
    <div class="row">
        <div class="col-sm-12 col-12">
            <h2>Login</h2>
            @if (Model != null && Model.UnsuccessfulLogInMessage != null)
            {
                <h3 class="text-danger">@Model.UnsuccessfulLogInMessage</h3>
            }
        </div>
    </div>
</header>

<main class="container main-default text-center">
    <div class="row">
        <div class="col-sm-12 col-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control field-default" id="username" placeholder="Username..." />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="field-default form-control" id="password" placeholder="Password..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Log in</button>
                </div>
            </form>
        </div>
    </div>
</main>
