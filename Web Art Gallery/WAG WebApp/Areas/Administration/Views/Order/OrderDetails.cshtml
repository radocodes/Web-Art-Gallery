@model WAG.ViewModels.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "OrderDetails";
}

<header class="container header-default">
    <div class="row">
        <div class="col-sm-12 col-12">
            <h2>Order Details</h2>
        </div>
    </div>
</header>

<main class="container main-default">
    <div class="row">

        <section class="col-sm-12 col-12 text-center">
            <button class="btn btn-warning" type="button" data-toggle="modal" data-target="#exampleModal">Delete Order</button>
        </section>

        <section class="col-12 text-center" id="order-details">
            <p>Username: <strong>@Model.Order.WAGUser.UserName</strong></p>
            <p>First Name: <strong>@Model.Order.WAGUser.FirstName</strong></p>
            <p>Last Name: <strong>@Model.Order.WAGUser.LastName</strong></p>
            <p>Phone number for contact: <strong>@Model.Order.TelephoneNumberForContact</strong></p>
            <p>Delivery Address: <strong>@Model.Order.DeliveryAddress</strong></p>
            <p>Additional Info: <strong>@Model.Order.OrderInfo</strong></p>

            @if (Model.Order.ArtisticWorkId != null)
            {
                <p>Artwork serial number: <strong>@Model.Order.ArtisticWork.Id</strong></p>
                <p>Price: <strong>@Model.Order.ArtisticWork.Price</strong></p>
                <img src="~/images/artWorks/@Model.Order.ArtisticWork.PictureFileName"/>
            }
        </section>

    </div>
</main>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to DELETE this order???
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form method="post" asp-area="Administration" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model.Order.Id">
                    <button type="submit" class="btn btn-primary">Delete Order</button>
                </form>
            </div>
        </div>
    </div>
</div>