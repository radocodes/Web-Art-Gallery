@model WAG.ViewModels.UserAccount.UserDetailsViewModel

@{
    ViewData["Title"] = "DeleteUser";
}

<header class="container header-default">
    <div class="row">
        <div class="col-sm-12 col-12">
            <h1 class="text-center">Delete User</h1>
        </div>
    </div>
</header>

<main class="container main-default">
    <div class="row">

        <section class="col-sm-12 col-12">
            <div>
                <h2 class="text-center">Are you sure you want to delete permanently this user?</h2>
                <br />
                <div class="text-center center-block" style="border:dotted; width:30%">
                    <p>UserName: @Model.UserName</p>
                    <p>First Name: @Model.FirstName</p>
                    <p>Last Name: @Model.LastName</p>
                </div>
                <br />
                <div class="text-center">
                    <form method="post" asp-area="Administration" asp-controller="UserAccount" asp-action="DeleteUser" asp-route-id="@Model.UserId">
                        <button type="submit" class="btn btn-warning">Delete</button>
                    </form>
                </div>
            </div>
        </section>

    </div>
</main>

