@model WAG.ViewModels.UserAccount.EditUserProfileViewModel
@{
    ViewData["Title"] = "Редактиране на профил";
}

<header class="container header-default">
    <div class="row">
        <div class="col-12">
            <h2>Редактиране на профила</h2>
        </div>
    </div>
</header>

<main class="container main-default text-center">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-area="BG" asp-controller="UserAccount" asp-action="EditUserProfile" class="center-block">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName">Име</label>
                    <input asp-for="FirstName" class="form-control field-default" placeholder="Име..." />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Фамилия</label>
                    <input asp-for="LastName" class="form-control field-default" placeholder="Фамилия..." />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Имейл</label>
                    <input asp-for="Email" class="form-control field-default" placeholder="Имейл..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Телефонен номер</label>
                    <input asp-for="PhoneNumber" class="form-control field-default" placeholder="Телефон..." />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City">Град</label>
                    <input asp-for="City" class="form-control field-default" placeholder="Град..." />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Адрес</label>
                    <input asp-for="Address" class="form-control field-default" placeholder="Адрес..." />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Запази промените</button>
                </div>
            </form>
        </div>
    </div>
</main>

